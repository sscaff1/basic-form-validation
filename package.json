{
  "name": "form-proof",
  "version": "0.1.2",
  "description": "This package provides basic form validations with 0 dependencies.",
  "main": "lib/",
  "scripts": {
    "test": "jest && codecov",
    "test:watch": "jest --watchAll --verbose",
    "build": "npm run format && npm run compile",
    "format": "prettier --single-quote --trailing-comma es5 --write \"{src,test}/**/*.js\"",
    "compile": "babel -d lib/ src/"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/*.{js,jsx}",
      "!**/examples/**"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "keywords": [
    "basic form validation",
    "form validation",
    "vanilla js",
    "plain javascript",
    "validations",
    "basic validations"
  ],
  "author": "Steven Scaffidi <sscaff1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sscaff1/form-proof/issues"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codecov": "^2.3.0",
    "compression-webpack-plugin": "^1.0.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.3"
  },
  "dependencies": {
    "promise-polyfill": "^6.0.2"
  }
}